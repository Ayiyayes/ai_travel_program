/* P4 相机权限提醒页样式 */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #fdf9f6;
  display: flex;
  flex-direction: column;
}

/* ========== 自定义导航栏 ========== */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  background-color: #fdf9f6;
}

.navbar-back {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 48rpx;
  color: #333;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.navbar-placeholder {
  width: 80rpx;
}

/* ========== 图片容器 ========== */
.image-container {
  flex: 1;
  width: 100%;
}

.permission-image {
  width: 100%;
  height: 100%;
}

/* ========== 默认内容 ========== */
.default-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.icon-wrapper {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  background: linear-gradient(135deg, rgba(232, 154, 141, 0.1) 0%, rgba(212, 149, 107, 0.1) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 三种权限图标样式 */
.icon-camera,
.icon-location,
.icon-album {
  font-size: 100rpx;
  line-height: 1;
}

.camera-icon {
  width: 100rpx;
  height: 100rpx;
}

.text-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
}

/* 提示框 */
.tips-box {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-item {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 按钮 */
.btn-authorize {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #e89a8d 0%, #d4956b 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  border: none;
}

.btn-authorize::after {
  border: none;
}

.btn-skip {
  width: 100%;
  height: 96rpx;
  background: transparent;
  color: #999;
  font-size: 28rpx;
  border: none;
}

.btn-skip::after {
  border: none;
}
