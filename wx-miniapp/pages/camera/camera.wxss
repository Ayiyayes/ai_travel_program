/* pages/camera/camera.wxss */
.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  background-color: #000000;
  overflow: hidden;
}

/* 相机预览 */
.camera {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

/* 拍照后的预览图 */
.preview-image {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

/* ========== 取景框遮罩层 ========== */
.overlay {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  pointer-events: none;
}

.mask-top {
  width: 100%;
  height: 167px;
  background: rgba(0, 0, 0, 0.5);
}

.frame-area {
  display: flex;
  flex-direction: row;
  height: 403px;
}

.mask-left {
  width: 20px;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.mask-right {
  width: 20px;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.frame-box {
  flex: 1;
  position: relative;
}

.mask-bottom {
  flex: 1;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
}

/* 取景框四角 */
.corner {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-color: #FFFFFF;
  border-style: solid;
  border-width: 0;
}

.corner-tl {
  top: 0;
  left: 0;
  border-top-width: 6rpx;
  border-left-width: 6rpx;
}

.corner-tr {
  top: 0;
  right: 0;
  border-top-width: 6rpx;
  border-right-width: 6rpx;
}

.corner-bl {
  bottom: 0;
  left: 0;
  border-bottom-width: 6rpx;
  border-left-width: 6rpx;
}

.corner-br {
  bottom: 0;
  right: 0;
  border-bottom-width: 6rpx;
  border-right-width: 6rpx;
}

/* ========== 自定义导航栏 ========== */
.custom-navbar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 100;
}

.navbar-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 12rpx;
  height: 88rpx;
}

.back-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 24rpx;
}

.back-icon {
  font-size: 48rpx;
  color: #FFFFFF;
  margin-right: 4rpx;
}

.back-text {
  font-size: 32rpx;
  color: #FFFFFF;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.navbar-placeholder {
  width: 160rpx;
}

/* ========== 底部提示框 ========== */
.tip-box {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 340rpx;
  width: 580rpx;
  padding: 24rpx 28rpx;
  background: rgba(253, 249, 246, 0.6);
  border-radius: 16rpx;
  z-index: 10;
}

.tip-text {
  font-size: 32rpx;
  line-height: 50rpx;
  color: #6F5D55;
  text-align: center;
}

/* ========== 拍照按钮 ========== */
.capture-btn-wrapper {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 120rpx;
  z-index: 10;
}

.capture-btn {
  width: 172rpx;
  height: 172rpx;
  border-radius: 50%;
  border: 8rpx solid rgba(255, 255, 255, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.capture-btn-inner {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
}

/* ========== 拍照后的操作按钮 ========== */
.action-buttons {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 60rpx;
  z-index: 10;
}

.btn-retake,
.btn-confirm {
  width: 280rpx;
  height: 108rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #E89A8D;
}

.btn-confirm {
  border: 6rpx solid #FDF9F6;
}

.btn-text {
  font-size: 56rpx;
  font-weight: 700;
  color: #FDF9F6;
  letter-spacing: 18rpx;
}

/* ========== 脸型分析中的遮罩 ========== */
.analyzing-overlay {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200;
}

.analyzing-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
}

.analyzing-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #e89a8d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.analyzing-text {
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
}
