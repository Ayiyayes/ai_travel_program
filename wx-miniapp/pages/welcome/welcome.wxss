/* P0 欢迎页样式 */
.container {
  min-height: 100vh;
  background-color: #fdf9f6;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* IP形象展示区 */
.welcome-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* IP形象图片 */
.ip-image {
  width: 80vw;
  height: 80vh;
  max-width: 600rpx;
  max-height: 800rpx;
}

/* IP形象占位（无图片时显示） */
.ip-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #e89a8d 0%, #dfbab4 100%);
  border-radius: 50%;
  box-shadow: 0 16rpx 48rpx rgba(232, 154, 141, 0.3);
}

.ip-icon {
  font-size: 80rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 4rpx;
}

.ip-text {
  font-size: 32rpx;
  color: #ffffff;
  margin-top: 8rpx;
  letter-spacing: 8rpx;
}

/* 加载动画 */
.loading-tips {
  display: flex;
  gap: 16rpx;
  margin-top: 60rpx;
}

.loading-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #dfbab4;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) {
  animation-delay: -0.32s;
}

.loading-dot:nth-child(2) {
  animation-delay: -0.16s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}
