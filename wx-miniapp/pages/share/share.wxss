/* P9 分享好友详情页 - 全屏样式 */

.share-page {
  width: 100vw;
  height: 100vh;
  background-color: #000000;
  position: relative;
  overflow: hidden;
}

/* ========== 加载状态 ========== */
.loading-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #000000;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* ========== 错误状态 ========== */
.error-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #000000;
  padding: 0 64rpx;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(255, 59, 48, 0.2);
  color: #FF3B30;
  font-size: 72rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.error-text {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.retry-btn {
  width: 320rpx;
  height: 88rpx;
  background-color: rgba(255, 255, 255, 0.15);
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.retry-btn::after {
  border: none;
}

/* ========== 内容容器 ========== */
.content-container {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

/* ========== 顶部导航栏 ========== */
.top-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
  padding-top: env(safe-area-inset-top);
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.5) 0%, transparent 100%);
  z-index: 10;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 48rpx;
  backdrop-filter: blur(20rpx);
}

.back-icon {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 300;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
  color: #ffffff;
}

.share-area {
  display: flex;
  align-items: center;
}

.share-btn {
  width: 88rpx;
  height: 88rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  backdrop-filter: blur(20rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border: none;
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: bold;
  letter-spacing: 4rpx;
}

/* ========== 全屏照片展示 ========== */
.photo-display {
  flex: 1;
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.photo-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 小红书水印 */
.watermark {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  padding: 8rpx 20rpx;
  background-color: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  border-radius: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  font-weight: 500;
}

/* ========== 底部拍同款按钮 ========== */
.bottom-action {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 48rpx 64rpx;
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  background: linear-gradient(0deg, rgba(0, 0, 0, 0.6) 0%, transparent 100%);
  display: flex;
  justify-content: center;
  z-index: 10;
}

.take-same-btn {
  width: 480rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #FF6B9D 0%, #FFA07A 100%);
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 157, 0.5);
  padding: 0;
  overflow: visible;
}

.take-same-btn::after {
  border: none;
}

.btn-icon {
  width: 64rpx;
  height: 64rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.camera-icon {
  font-size: 40rpx;
}

.btn-text {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 600;
  letter-spacing: 8rpx;
}

/* 按钮点击效果 */
.take-same-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.back-btn:active,
.share-btn:active {
  opacity: 0.7;
}
